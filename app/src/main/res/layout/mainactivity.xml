<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:textSize="48dp"
        android:gravity="end|bottom"
        android:layout_height="390dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:onClick="onclear"
            android:id="@+id/_C"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="C"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/bracket"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="()"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/remainder"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="%"
            android:textSize="25dp"/>
        <Button
            android:onClick="onoperator"
            android:id="@+id/divide"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="รท" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:onClick="onclick"
            android:id="@+id/_7"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="7"
            android:textSize="25dp"/>
        <Button
            android:onClick="onclick"
            android:id="@+id/_8"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="8"
            android:textSize="25dp"/>
        <Button
            android:onClick="onclick"
            android:id="@+id/_9"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="9"
            android:textSize="25dp"/>
        <Button
            android:onClick="onoperator"
            android:id="@+id/multiple"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="*" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:onClick="onclick"
            android:id="@+id/_4"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="4"
            android:textSize="25dp"/>
        <Button
            android:onClick="onclick"
            android:id="@+id/_5"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="25dp"/>
        <Button
            android:onClick="onclick"
            android:id="@+id/_6"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="25dp"/>
        <Button
            android:onClick="onoperator"
            android:id="@+id/minus"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="-" />


    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:onClick="onclick"
            android:id="@+id/_1"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="25dp"/>
        <Button
            android:onClick="onclick"
            android:id="@+id/_2"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#212529"
            android:text="2"
            android:textSize="25dp"/>
        <Button
            android:onClick="onclick"
            android:id="@+id/_3"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="3"
            android:textSize="25dp"/>
        <Button
            android:onClick="onoperator"
            android:id="@+id/plus"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plusminus"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+/-"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"/>
        <Button
            android:onClick="onclick"
            android:id="@+id/_0"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="0"
            android:layout_weight="1"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/_dot"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="."
            android:textSize="25dp"/>
        <Button
            android:onClick="onEqual"
            android:id="@+id/_equal"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="#212529"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="=" />
    </LinearLayout>

</LinearLayout>